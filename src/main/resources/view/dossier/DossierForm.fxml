<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.hsp.controller.dossier.DossierFormController"
      style="-fx-padding: 20;">

    <!-- En-tete -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Retour" onAction="#retourListe"
                style="-fx-background-color: #757575; -fx-text-fill: white;"/>
        <Label fx:id="lblTitre" text="Nouveau dossier de prise en charge"
               style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
    </HBox>

    <Separator/>

    <!-- Formulaire -->
    <GridPane hgap="15" vgap="15" style="-fx-padding: 10;">
        <columnConstraints>
            <ColumnConstraints percentWidth="25"/>
            <ColumnConstraints percentWidth="75"/>
        </columnConstraints>

        <!-- Patient -->
        <Label text="Patient *" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="comboPatient" promptText="Selectionner un patient" maxWidth="Infinity"
                  GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <!-- Date d'arrivee -->
        <Label text="Date d'arrivee" style="-fx-font-weight: bold;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="champDateArrivee" promptText="Automatique (date et heure actuelles)"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <!-- Symptomes -->
        <Label text="Symptomes *" style="-fx-font-weight: bold;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextArea fx:id="champSymptomes" promptText="Decrire les symptomes du patient..."
                  prefRowCount="4" wrapText="true"
                  GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <!-- Niveau de gravite -->
        <Label text="Niveau de gravite *" style="-fx-font-weight: bold;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <ComboBox fx:id="comboGravite" promptText="Selectionner le niveau (1-5)" maxWidth="Infinity"
                  GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <!-- Info gravite -->
        <Label text="" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <Label fx:id="lblInfoGravite" text="1 = Peu grave, 5 = Tres grave (urgence vitale)"
               style="-fx-text-fill: #757575; -fx-font-style: italic;"
               GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <Separator/>

    <!-- Boutons d'action -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Annuler" onAction="#retourListe"
                style="-fx-background-color: #757575; -fx-text-fill: white;" prefWidth="120"/>
        <Button fx:id="btnEnregistrer" text="Enregistrer" onAction="#enregistrer"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" prefWidth="150"/>
    </HBox>

</VBox>
