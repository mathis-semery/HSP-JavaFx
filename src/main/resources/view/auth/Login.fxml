<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.DropShadow?>

<StackPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.hsp.controller.login.LoginController"
           style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);">

    <!-- Conteneur principal avec effet d'ombre -->
    <VBox alignment="CENTER" maxWidth="400" maxHeight="550"
          style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 40;">
        <effect>
            <DropShadow color="#00000033" radius="30" spread="0.2"/>
        </effect>

        <!-- Logo/IcÃ´ne -->
        <StackPane prefHeight="80" prefWidth="80"
                   style="-fx-background-color: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -fx-background-radius: 40;">
            <Label text="ðŸ”" style="-fx-font-size: 40;"/>
        </StackPane>

        <VBox.margin>
            <Insets bottom="10"/>
        </VBox.margin>

        <!-- Titre -->
        <Label text="Bienvenue" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #2d3748;">
            <VBox.margin>
                <Insets top="20" bottom="5"/>
            </VBox.margin>
        </Label>

        <!-- Sous-titre -->
        <Label text="Connectez-vous Ã  votre compte" style="-fx-font-size: 14; -fx-text-fill: #718096;">
            <VBox.margin>
                <Insets bottom="30"/>
            </VBox.margin>
        </Label>

        <!-- Champ Email -->
        <VBox spacing="8">
            <Label text="Email" style="-fx-font-size: 13; -fx-font-weight: 600; -fx-text-fill: #4a5568;"/>
            <TextField fx:id="emailField" promptText="votre@email.com"
                       style="-fx-background-color: #f7fafc; -fx-background-radius: 10; -fx-border-color: #e2e8f0; -fx-border-radius: 10; -fx-border-width: 1.5; -fx-padding: 12; -fx-font-size: 14;"
                       onMouseEntered="#onFieldHover" onMouseExited="#onFieldExit">
            </TextField>
        </VBox>

        <!-- Champ Mot de passe -->
        <VBox spacing="8">
            <VBox.margin>
                <Insets top="15"/>
            </VBox.margin>
            <Label text="Mot de passe" style="-fx-font-size: 13; -fx-font-weight: 600; -fx-text-fill: #4a5568;"/>
            <PasswordField fx:id="passwordField" promptText="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
                           style="-fx-background-color: #f7fafc; -fx-background-radius: 10; -fx-border-color: #e2e8f0; -fx-border-radius: 10; -fx-border-width: 1.5; -fx-padding: 12; -fx-font-size: 14;"
                           onMouseEntered="#onFieldHover" onMouseExited="#onFieldExit">
            </PasswordField>
        </VBox>

        <!-- Options (Se souvenir / Mot de passe oubliÃ©) -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <VBox.margin>
                <Insets top="15" bottom="25"/>
            </VBox.margin>

            <CheckBox fx:id="rememberMeCheckbox" text="Se souvenir de moi"
                      style="-fx-font-size: 12; -fx-text-fill: #4a5568;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Hyperlink text="Mot de passe oubliÃ© ?"
                       style="-fx-font-size: 12; -fx-text-fill: #667eea; -fx-border-width: 0;"
                       onAction="#onForgotPassword"/>
        </HBox>

        <!-- Bouton de connexion -->
        <Button fx:id="loginButton" text="Se connecter" maxWidth="Infinity"
                style="-fx-background-color: linear-gradient(to right, #667eea 0%, #764ba2 100%); -fx-text-fill: white; -fx-font-size: 15; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 14; -fx-cursor: hand;"
                onAction="#onLoginClicked" onMouseEntered="#onButtonHover" onMouseExited="#onButtonExit">
            <VBox.margin>
                <Insets bottom="15"/>
            </VBox.margin>
        </Button>

        <!-- SÃ©parateur -->
        <HBox alignment="CENTER" spacing="10">
            <VBox.margin>
                <Insets top="10" bottom="10"/>
            </VBox.margin>
            <Separator prefWidth="80" style="-fx-background-color: #e2e8f0;"/>
            <Label text="OU" style="-fx-font-size: 12; -fx-text-fill: #a0aec0;"/>
            <Separator prefWidth="80" style="-fx-background-color: #e2e8f0;"/>
        </HBox>

        <!-- Inscription -->
        <HBox alignment="CENTER" spacing="5">
            <Label text="Pas encore de compte ?" style="-fx-font-size: 13; -fx-text-fill: #718096;"/>
            <Hyperlink text="S'inscrire"
                       style="-fx-font-size: 13; -fx-text-fill: #667eea; -fx-font-weight: bold; -fx-border-width: 0;"
                       onAction="#onSignUpClicked"/>
        </HBox>
    </VBox>

</StackPane>
