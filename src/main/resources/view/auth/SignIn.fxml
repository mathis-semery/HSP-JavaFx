<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="12.0" xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hsp.controller.login.SignInController">

    <padding>
        <Insets top="30.0" right="40.0" bottom="30.0" left="40.0"/>
    </padding>

    <!-- Titre -->
    <Label text="Inscription">
        <font>
            <Font name="System Bold" size="24.0"/>
        </font>
    </Label>

    <!-- Champ prénom -->
    <Label text="Prénom :"/>
    <TextField fx:id="firstNameField" promptText="Entrez votre prénom"/>

    <!-- Champ nom -->
    <Label text="Nom :"/>
    <TextField fx:id="lastNameField" promptText="Entrez votre nom"/>

    <!-- Champ email -->
    <Label text="Email :"/>
    <TextField fx:id="emailField" promptText="exemple@email.com"/>

    <!-- Champ nom d'utilisateur -->
    <Label text="Nom d'utilisateur :"/>
    <TextField fx:id="usernameField" promptText="Choisissez un nom d'utilisateur"/>

    <!-- Champ mot de passe -->
    <Label text="Mot de passe :"/>
    <PasswordField fx:id="passwordField" promptText="Créez un mot de passe"/>

    <!-- Champ confirmation mot de passe -->
    <Label text="Confirmez le mot de passe :"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Confirmez votre mot de passe"/>

    <!-- Message d'erreur/succès -->
    <Label fx:id="messageLabel" textFill="RED" visible="false" wrapText="true"/>

    <!-- Bouton d'inscription -->
    <Button text="S'inscrire" onAction="#handleSignUp" prefWidth="200.0">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>

</VBox>
